{
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/darkadept/imperium.git"
	},
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lerna": "lerna",
		"build": "yarn build:auth && yarn build:graphql && yarn build:core && yarn build:context",
		"build:auth": "cd packages/auth && yarn build",
		"build:graphql": "cd packages/graphql && yarn build",
		"build:core": "cd packages/core && yarn build",
		"build:context": "cd packages/context && yarn build",
		"lint": "lerna run lint",
		"ts": "lerna run ts",
		"test": "lerna run test --stream --concurrency 1",
		"test:coverage": "lerna run test:coverage --stream --concurrency 1",
		"pkghash": "./tools/pkghash",
		"docs:md": "lerna run docs:md",
		"docs:build": "yarn docs:md && cd website && yarn build",
		"ready:commit": "yarn lint && yarn test:coverage && yarn docs:build",
		"yalc:publish": "lerna run yalc:publish"
	},
	"devDependencies": {
		"@imperium/babel-preset-imperium": "^2.0.1",
		"@imperium/eslint-config-imperium": "^2.0.2",
		"@types/debug": "^4.1.5",
		"@types/express": "^4.17.1",
		"@types/react": "^16.9.2",
		"@types/react-dom": "^16.9.0",
		"@types/react-hot-loader": "^4.1.0",
		"eslint": "^6.2.1",
		"lerna": "^3.16.4",
		"react": "^16.9.0",
		"react-dom": "^16.9.0",
		"rimraf": "^3.0.0",
		"webpack": "^4.39.3",
		"jest": "^24.9.0",
		"typescript": "^3.5.3"
	}
}
