{
	"name": "@imperium/context",
	"version": "2.0.3",
	"description": "Imperium context package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"engines": {
		"node": ">=8"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "lib/context.js",
	"files": [
		"lib",
		"README.md"
	],
	"scripts": {
		"prepublish": "npm run build",
		"build": "npm run clean && npm run build:client",
		"build:client": "NODE_ENV=production webpack --config webpack.config.js",
		"clean": "rimraf ./lib/*",
		"lint": "eslint --cache --ext js,ts,tsx src",
		"ts": "tsc",
		"DISABLEDtest": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh auth",
		"docs:md": "../../tools/jsdocmd.sh auth",
		"yalc:publish": "yalc publish --push"
	},
	"dependencies": {
		"debug": "^4.0.1"
	},
	"peerDependencies": {
		"react": "^16.x"
	},
	"devDependencies": {
		"rimraf": "^2.6.3",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.1"
	},
	"jest": {
		"setupFiles": [
			"<rootDir>/../../tests/setupTests.js"
		],
		"transform": {
			"^.+\\.[jt]sx?$": "<rootDir>/../../tools/jest-transformer.js"
		},
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/../../tests/__mocks__/fileMock.js",
			"\\.(css)$": "identity-obj-proxy"
		}
	}
}
