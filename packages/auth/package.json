{
	"name": "@imperium/auth",
	"version": "0.0.2",
	"description": "Basic Auth Imperium package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"engines": {
		"node": ">=8"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"files": [
		"lib",
		"README.md"
	],
	"scripts": {
		"prepublish": "npm run build",
		"build": "npm run clean && concurrently \"npm:build:server\" \"npm:build:client\"",
		"build:watch": "npm run clean && concurrently \"npm:build:server -- --verbose -w\" \"npm:build:client -- --verbose -w\"",
		"build:server": "NODE_ENV=production babel ./src/server -s --out-dir lib/server --config-file ./server.babelrc",
		"build:client": "NODE_ENV=production babel ./src/client -s --out-dir lib/client --config-file ./client.babelrc",
		"clean": "rimraf ./lib/*",
		"lint": "eslint --cache 'src/**/*.js'"
	},
	"dependencies": {
		"@thx/controls": "^7.1.6",
		"@thx/ducks": "^7.1.1",
		"@thx/mongoloader": "^7.1.1",
		"@thx/router": "^7.1.1",
		"@thx/tschemas": "^7.1.1",
		"bcrypt": "^3.0.1",
		"debug": "^4.0.1",
		"jsonwebtoken": "^8.3.0",
		"lodash": "^4.17.11",
		"yup": "^0.26.6"
	},
	"peerDependencies": {
		"immutable": "^3.x",
		"mongodb": "^3.x",
		"react": "^16.x",
		"react-router-dom": "^4.x",
		"semantic-ui-react": "^0.x"
	}
}
